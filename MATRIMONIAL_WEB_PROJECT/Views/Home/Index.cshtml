@{
    ViewData["Title"] = "Matrimonial Dashboard";
}

<div class="dashboard-overview">
    <h2>Welcome to Your Matrimonial Dashboard pppppp</h2>
    <div class="row">
        <div class="col-lg-3 col-md-6">
            <div class="card bg-primary text-white mb-4">
                <div class="card-body">Profile Completeness</div>
                <div class="card-footer d-flex align-items-center justify-content-between">
                    <span>80% Complete</span>
                </div>
            </div>
        </div>
        <div class="col-lg-3 col-md-6">
            <div class="card bg-success text-white mb-4">
                <div class="card-body">New Matches</div>
                <div class="card-footer d-flex align-items-center justify-content-between">
                    <span>12 New Matches</span>
                </div>
            </div>
        </div>
        <div class="col-lg-3 col-md-6">
            <div class="card bg-warning text-white mb-4">
                <div class="card-body">Pending Messages</div>
                <div class="card-footer d-flex align-items-center justify-content-between">
                    <span>5 Pending Messages</span>
                </div>
            </div>
        </div>
        <div class="col-lg-3 col-md-6">
            <div class="card bg-danger text-white mb-4">
                <div class="card-body">New Notifications</div>
                <div class="card-footer d-flex align-items-center justify-content-between">
                    <span>3 Notifications</span>
                </div>
            </div>
        </div>
    </div>
</div>

<div class="dashboard-activity">
    <h3>Recent Activity</h3>
    <ul>
        <li>You viewed a profile</li>
        <li>You received a message</li>
        <li>New match found for you</li>
    </ul>
</div>
